style.
    img{
        max-width:100px;
        filter: drop-shadow(7px 13px 5px #00000042);
    }
    img.cloudy{
        max-width:100px;
        left: -10px;
        filter: drop-shadow(7px 13px 5px #00000042);
        position: relative;
        animation: cloud;
        animation-duration: 4s;
        animation-iteration-count: infinite;
        animation-timing-function: linear
    }
    @keyframes cloud {
        0% {left: -10px;}
        25% {left: 10px;}
        50% {left: -10px;}
        100%{left: 10px;}
    }
